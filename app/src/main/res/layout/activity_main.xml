<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragmentAddToList"
        android:name="com.example.hw361.FragmentAddToList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        tools:layout="@layout/fragment_add_to_list" />

    <fragment
        android:id="@+id/fragmentForList"
        android:name="com.example.hw361.FragmentForList"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        tools:layout="@layout/fragment_for_list" />

    <fragment
        android:id="@+id/fragmentForHideAndShow"
        android:name="com.example.hw361.FragmentForHideAndShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_for_hide_and_show" />
</LinearLayout>
